    <!-- Base definition of a button -->
    <button name="basebutton">
        <position>0,0</position>
        <statetype name="buttonstate">
            <state name="active">
                <imagetype name="background">
                    <area>0,0,150,35</area>
                    <filename>images/buttonbackground.png</filename>
                </imagetype>
                <textarea name="text">
                    <area>5,4,140,30</area>
                    <align>allcenter</align>
                    <font>basemedium</font>
                    <font state="selected">basemedium</font>
                    <font state="disabled">basemediumgrey</font>
                </textarea>
            </state>
            <state name="selected" from="active">
                <imagetype name="background">
                    <area>0,0,150,35</area>
                    <filename>images/buttonbackground_selected.png</filename>
                    <alphapulse min="150" max="255" change="1"/>
                </imagetype>
            </state>
            <state name="disabled" from="active" />
            <state name="pushed" from="active">
                <imagetype name="background">
                    <area>0,0,150,35</area>
                    <filename>images/buttonbackground.png</filename>
                    <alpha>255</alpha>
                </imagetype>
                <textarea name="text">
                    <position>8,8</position>
                </textarea>
            </state>
        </statetype>
    </button>

