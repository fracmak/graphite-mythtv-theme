<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>
    
    <window name="browser">
        
        <imagetype name="background">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/</filename>
        </imagetype>
        
        <buttonlist name="pagelist" from="baseselector">
            <area>20,10,1240,45</area>
        </buttonlist>
        
        <webbrowser name="webbrowser">
            <area>20,55,1240,600</area>
            <zoom>1.4</zoom>
        </webbrowser>
        
        <!-- these are optional -->
        <progressbar name="progressbar" from="baseprogressbar">
            <area>370,660,540,25</area>
        </progressbar>
        
        <textarea name="status" from="basetextarea">
            <area>240,10,800,38</area>
            <align>center,vcenter</align>
            <multiline>no</multiline>
        </textarea>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <template>%DATE%, %TIME%</template>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
    <window name="bookmarkmanager">
        <area>-1,-1,1280,720</area>
        
        <shape name="list_background">
            <area>420,50,800,500</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <buttonlist name="grouplist" from="basebuttonlist">
            <area>40,50,349,500</area>
        </buttonlist>
        
        <buttonlist name="bookmarklist" from="basebuttonlist">
            <area>440,60,730,470</area>
            <statetype name="buttonitem">
                <state name="active">
                    <statetype name="buttoncheck">
                        <position>5,9</position>
                    </statetype>
                    <textarea name="name">
                        <area>40,7,250,30</area>
                        <font>basesmall</font>
                        <align>left,vcenter</align>
                    </textarea>
                    <textarea name="url">
                        <area>395,7,350,30</area>
                        <font>basesmall</font>
                        <align>left,vcenter</align>
                    </textarea>
                    <statetype name="buttoncheck">
                        <position>5,9</position>
                    </statetype>
                </state>
                <state name="selectedactive">
                    <statetype name="buttoncheck">
                        <position>5,9</position>
                    </statetype>
                    <textarea name="name">
                        <area>40,7,250,30</area>
                        <font>basesmall</font>
                        <align>left,vcenter</align>
                    </textarea>
                    <textarea name="url">
                        <area>395,7,350,30</area>
                        <font>basesmall</font>
                        <align>left,vcenter</align>
                    </textarea>
                </state>
                <state name="selectedinactive">
                    <statetype name="buttoncheck">
                        <position>5,9</position>
                    </statetype>
                    <textarea name="name">
                        <area>40,7,250,30</area>
                        <font>basesmall</font>
                        <align>left,vcenter</align>
                    </textarea>
                    <textarea name="url">
                        <area>395,7,350,30</area>
                        <font>basesmall</font>
                        <align>left,vcenter</align>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>
        
        <textarea name="messagetext" from="basetextarea">
            <font>basemedium</font>
            <area>40,230,720,290</area>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <template>%DATE%, %TIME%</template>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
    <window name="browserconfig">
        <area>-1,-1,1280,720</area>
        
        <shape name="shape">
            <area>90,50,1100,520</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <textarea name="commandlabel" from="basetextarea">
            <area>430,150,200,30</area>
            <align>right,vcenter</align>
            <value>Browser Command:</value>
        </textarea>
        
        <textedit name="command" from="basetextedit">
            <position>640,150</position>
        </textedit>
        
        <textarea name="zoomlabel" from="basetextarea">
            <area>430,250,200,30</area>
            <align>right,vcenter</align>
            <value>Text Size:</value>
        </textarea>
        
        <textedit name="zoom" from="basetextedit">
            <position>645,250</position>
        </textedit>
        
        <shape name="shape2">
            <area>290,360,750,100</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="150" />
            <line color="#FFFFFF" alpha="100" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <textarea name="description" from="basetextarea">
            <area>300,365,680,90</area>
            <multiline>yes</multiline>
        </textarea>
        
        <button name="cancel" from="basebutton">
            <position>465,500</position>
            <value>Cancel</value>
        </button>
        
        <button name="ok" from="basebutton">
            <position>665,500</position>
            <value>OK</value>
        </button>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <template>%DATE%, %TIME%</template>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
    <window name="bookmarkeditor">
        
        <imagetype name="background">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/</filename>
        </imagetype>
        
        <textarea name="title">
            <area>100,15,1080,30</area>
            <align>center</align>
            <font>basemedium</font>
            <value>Configure Web Browser</value>
        </textarea>
        
        <shape name="shape">
            <area>90,50,1100,620</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <textarea name="categorylabel" from="basetextarea">
            <area>420,150,100,30</area>
            <align>right,vcenter</align>
            <value>Category:</value>
        </textarea>
        
        <textedit name="category" from="basetextedit">
            <position>530,150</position>
        </textedit>
        
        <button name="findcategory" from="basebutton">
            <position>825,145</position>
            <value>Find</value>
        </button>
        
        <textarea name="namelabel" from="basetextarea">
            <area>420,250,100,30</area>
            <align>right,vcenter</align>
            <value>Name:</value>
        </textarea>
        
        <textedit name="name" from="basetextedit">
            <position>530,250</position>
        </textedit>
        
        <textarea name="urllabel" from="basetextarea">
            <area>420,350,100,30</area>
            <align>right,vcenter</align>
            <value>URL:</value>
        </textarea>
        
        <textedit name="url" from="basetextedit">
            <position>530,350</position>
        </textedit>
        
        <button name="cancel" from="basebutton">
            <position>465,600</position>
            <value>Cancel</value>
        </button>
        
        <button name="ok" from="basebutton">
            <position>665,600</position>
            <value>OK</value>
        </button>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <template>%DATE%, %TIME%</template>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
</mythuitheme>
