<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>
    
    <window name="keygrabpopup">
        <area>390,150,500,500</area>
        
        <shape name="shape">
            <area>0,0,500,500</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#FFFFFF" alpha="255" width="1" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <textarea name="message" from="basetextarea">
            <area>18,18,460,400</area>
            <multiline>yes</multiline>
        </textarea>
        
        <button name="cancel" from="basebutton">
            <position>85,420</position>
            <value>Cancel</value>
        </button>
        
        <button name="ok" from="basebutton">
            <position>265,420</position>
            <value>OK</value>
        </button>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <template>%DATE%, %TIME%</template>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
    <window name="controls">
        <area>-1,-1,1280,720</area>
        
        <shape name="shape">
            <area>90,50,1100,520</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <textarea name="leftdesc" from="basetextarea">
            <area>64,86,540,30</area>
            <value>Contexts</value>
            <align>center</align>
        </textarea>
        
        <buttonlist name="leftlist" from="basebuttonlist">
            <area>164,126,560,310</area>
            <showarrow>no</showarrow>
        </buttonlist>
        
        <textarea name="rightdesc" from="leftdesc">
            <area>656,86,540,30</area>
            <value>Actions</value>
        </textarea>
        
        <buttonlist name="rightlist" from="leftlist">
            <area>756,126,560,310</area>
        </buttonlist>
        
        <button name="action_0" from="basebutton">
            <position>275,500</position>
        </button>
        
        <button name="action_1" from="action_0">
            <position>465,500</position>
        </button>
        
        <button name="action_2" from="action_0">
            <position>655,500</position>
        </button>
        
        <button name="action_3" from="action_0">
            <position>845,500</position>
        </button>
        
        <textarea name="description" from="basetextarea">
            <area>40,625,1200,85</area>
            <value>This screen displays the status of various system components</value>
            <multiline>yes</multiline>
            <align>center</align>
        </textarea>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <template>%DATE%, %TIME%</template>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
</mythuitheme>
