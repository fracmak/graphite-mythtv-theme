<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    
    <window name="moviesui">
        <area>-1,-1,1280,720</area>
        
        <shape name="shape">
            <area>237,50,805,230</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <shape name="shape2">
            <area>10,290,1260,240</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <buttontree name="movietreelist">
            <area>50,302,1240,226</area>
            <numlists>3</numlists>
            <spacing>6</spacing>
            <buttonlist name="listtemplate" from="basebuttonlist" />
        </buttontree>
        
        <textarea name="theatername" from="basetextarea">
            <area>247,58,780,38</area>
            <cutdown>yes</cutdown>
            <align>center</align>
            <font>basesmaller</font>
        </textarea>
        
        <textarea name="movietitle" from="basetextarea">
            <font>baselarge</font>
            <area>247,103,780,30</area>
            <align>center</align>
        </textarea>
        
        <textarea name="rating" from="basetextarea">
            <area>247,150,150,35</area>
            <font>basesmall</font>
            <align>left,vcenter</align>
            <value>Rating:</value>
        </textarea>
        
        <textarea name="ratingvalue" from="basetextarea">
            <area>449,150,500,35</area>
            <align>left,vcenter</align>
        </textarea>
        
        <textarea name="runningtime" from="rating">
            <area>247,182,300,35</area>
            <value>Running Time:</value>
        </textarea>
        
        <textarea name="runningtimevalue" from="ratingvalue">
            <area>449,182,300,35</area>
        </textarea>
        
        <textarea name="showtimes" from="rating">
            <area>247,214,300,35</area>
            <value>Show Times:</value>
        </textarea>
        
        <textarea name="showtimesvalue" from="ratingvalue">
            <area>449,220,590,60</area>
            <align>left</align>
            <multiline>yes</multiline>
        </textarea>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <template>%DATE%, %TIME%</template>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
</mythuitheme>
