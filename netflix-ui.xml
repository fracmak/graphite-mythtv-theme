<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    
    <window name="browse">
        <area>-1,-1,1280,720</area>
        
        <shape name="shape">
            <area>10,50,1260,220</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <shape name="shape2">
            <area>110,300,1060,240</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <buttonlist name="siteslist" from="basebuttonlist">
            <area>200,320,500,240</area>
            <showarrow>yes</showarrow>
        </buttonlist>
        
        <buttonlist name="articleslist" from="basebuttonlist">
            <area>740,320,500,240</area>
            <showarrow>no</showarrow>
        </buttonlist>
        
        <textarea name="title" from="basetextarea">
            <area>40,70,1020,70</area>
            <font>baselarge</font>
            <multiline>yes</multiline>
        </textarea>
        
        <textarea name="description" from="basetextarea">
            <area>40,135,1020,150</area>
            <multiline>yes</multiline>
        </textarea>
        
        <textarea name="status" from="basetextarea">
            <area>40,230,1080,35</area>
        </textarea>
        
        <imagetype name="boxshot">
            <area>1080,135,160,120</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <format>%DATE%, %TIME%</format>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
    <window name="queue">
        <area>-1,-1,1280,720</area>
        
        <shape name="shape">
            <area>10,50,1260,220</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <shape name="shape2">
            <area>110,300,1060,240</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <buttonlist name="articleslist" from="basebuttonlist">
            <area>740,320,500,240</area>
            <showarrow>no</showarrow>
        </buttonlist>
        
        <textarea name="title" from="basetextarea">
            <area>40,70,1020,70</area>
            <font>baselarge</font>
            <multiline>yes</multiline>
        </textarea>
        
        <textarea name="description" from="basetextarea">
            <area>40,135,1020,150</area>
            <multiline>yes</multiline>
        </textarea>
        
        <textarea name="status" from="basetextarea">
            <area>40,230,1080,35</area>
        </textarea>
        
        <imagetype name="boxshot">
            <area>1080,135,160,120</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>
        
        <imagetype name="clockback" draworder="0">
            <area>540,695,200,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <format>%DATE%, %TIME%</format>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
    <window name="config">
        <area>-1,-1,1280,720</area>
        
        <shape name="shape">
            <area>90,50,1100,520</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
            <line color="#FFFFFF" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        
        <textarea name="leftdesc" from="basetextarea">
            <area>64,86,540,30</area>
            <value>Contexts</value>
            <align>center</align>
        </textarea>
        
        <buttonlist name="category" from="basebuttonlist">
            <area>164,126,300,415</area>
            <showarrow>no</showarrow>
        </buttonlist>
        
        <textarea name="rightdesc" from="leftdesc">
            <area>656,86,540,30</area>
            <value>Actions</value>
        </textarea>
        
        <buttonlist name="sites" from="category">
            <area>756,126,440,415</area>
        </buttonlist>
        
        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>
        
        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <format>%DATE%, %TIME%</format>
            <align>center</align>
            <alpha>255</alpha>
        </clock>
        
        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>
        
    </window>
    
</mythuitheme>
