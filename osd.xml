<mythuitheme>
    <window name="MythPopupBox">

        <fontdef name="basesmall" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
        </fontdef>

        <fontdef name="basesmallgrey" from="basesmall">
            <color>#666666</color>
        </fontdef>

        <area>50,50,380,463</area>

        <imagetype name="backimg">
            <area>0,0,380,463</area>
            <filename>images/popup_background.png</filename>
        </imagetype>
        
        <textarea name="messagearea">
            <area>25,20,328,140</area>
            <font>basesmall</font>
            <multiline>yes</multiline>
            <align>allcenter</align>
        </textarea>
        
        <imagetype name="dialogboxoverlay">
            <area>0,0,380,117</area>
            <filename>images/dialogbox_overlay.png</filename>
        </imagetype>
        
        <buttonlist name="list">
            <area>16,185,349,260</area>
            <spacing>3</spacing>
            <layout>vertical</layout>
            <buttonarea>0,0,100%,97%</buttonarea>
            <drawfrombottom>yes</drawfrombottom>
            <align>center</align>
            <showarrow>no</showarrow>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,100%,30</area>
                    <imagetype name="buttonbackground">
                        <area>0,0,349,39</area>
                        <filename>images/buttonbackground.png</filename>
                    </imagetype>
                    <textarea name="buttontext">
                        <area>0,7,100%,30</area>
                        <font>basesmall</font>
                        <cutdown>yes</cutdown>
                        <align>allcenter</align>
                    </textarea>
                    <statetype name="buttoncheck">
                        <area>91%,10,20,20</area>
                        <state type="off">
                            <imagetype name="checkoff">
                                <area>0,0,20,20</area>
                                <filename>images/lb-check-empty.png</filename>
                            </imagetype>
                        </state>
                        <state type="half">
                            <imagetype name="checkhalf">
                                <area>0,0,20,20</area>
                                <filename>images/lb-check-half.png</filename>
                            </imagetype>
                        </state>
                        <state type="full">
                            <imagetype name="checkfull">
                                <area>0,0,20,20</area>
                                <filename>images/lb-check-full.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <imagetype name="buttonarrow">
                        <area>92%,11,20,20</area>
                        <filename>images/rightarrow.png</filename>
                    </imagetype>
                </state>
                <state name="selectedinactive" from="active">
                    <imagetype name="buttonbackground">
                        <area>0,0,349,39</area>
                        <filename>images/buttonbackground_selected.png</filename>
                        <alpha>127</alpha>
                    </imagetype>
                    <textarea name="buttontext">
                        <font>basesmallgrey</font>
                        <area>0,7,100%,30</area>
                        <align>allcenter</align>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <imagetype name="buttonbackground">
                        <area>0,0,349,39</area>
                        <filename>images/buttonbackground_selected.png</filename>
                        <alphapulse min="200" max="255" change="1"/>
                    </imagetype>
                    <textarea name="buttontext">
                        <area>0,7,100%,30</area>
                        <align>allcenter</align>
                    </textarea>
                </state>
            </statetype>

            <statetype name="upscrollarrow">
                <area>10,97%,20,20</area>
                <state type="off">
                    <imagetype name="upon">
                        <area>0,0,20,20</area>
                        <filename>images/uparrow.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <area>0,0,20,20</area>
                        <filename>images/uparrow.png</filename>
                    </imagetype>
                </state>
            </statetype>

            <statetype name="downscrollarrow">
                <area>40,97%,20,20</area>
                <state type="off">
                    <imagetype name="dnon">
                        <area>0,0,20,20</area>
                        <filename>images/downarrow.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <area>0,0,20,20</area>
                        <filename>images/downarrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>
    </window>

    <window name="osd_message">
        <area>50,50,580,170</area>

        <fontdef name="basesmall" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
        </fontdef>

        <fontdef name="basesmallgrey" from="basesmall">
            <color>#666666</color>
        </fontdef>

        <shape name="boxshape">
            <area>0,0,580,170</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="210" />
            <line color="#FFFFFF" alpha="255" />
            <cornerradius>15</cornerradius>
        </shape>

        <textarea name="message_text" from="basetextarea">
            <area>10,15,560,140</area>
            <font>basesmall</font>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

    </window>

    <window name="osd_status">
        <area>350,445,580,170</area>

        <fontdef name="basesmall" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
        </fontdef>

        <fontdef name="basesmallgrey" from="basesmall">
            <color>#666666</color>
        </fontdef>

        <shape name="boxshape">
            <area>0,0,580,170</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="210" />
            <line color="#FFFFFF" alpha="255" />
            <cornerradius>15</cornerradius>
        </shape>

        <textarea name="value">
            <area>10,100,560,65</area>
            <font>basesmall</font>
        </textarea>

        <textarea name="playedtime" from="value">
            <align>allcenter</align>
            <template>%PLAYEDTIME% of %TOTALTIME% %(|REMAININGTIME| remaining)%%(|BEHINDTIME| behind)%</template>
        </textarea>

        <progressbar name="position">
            <area>22,70,536,19</area>
            <layout>horizontal</layout>
            <style>reveal</style>
            <imagetype name="background">
                <area>0,0,536,19</area>
                <filename>images/progressbar_background.png</filename>
            </imagetype>
            <imagetype name="progressimage">
                <area>1,2,535,17</area>
                <filename>images/progressbar_fill.png</filename>
            </imagetype>
        </progressbar>

    </window>

</mythuitheme>
