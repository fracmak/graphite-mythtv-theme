<mythosdtheme>
    <!-- if timeformat is set to 'FROMSETTINGS', it will use the time format
         specified in the general mythtv medium -->
    <timeformat>FROMSETTINGS</timeformat>
    <fadeaway>30</fadeaway>

    <font name="extralarge">
        <color normal="#FFFFFF">255</color>
        <size>28</size>
        <shadow>2,2</shadow>
    </font>

    <font name="medium">
        <color>255</color>
        <size>24</size>
        <shadow>2,2</shadow>
    </font>

    <font name="small">
        <color>255</color>
        <size>20</size>
        <shadow>2,2</shadow>
    </font>

    <font name="smallgrey">
        <color>204</color>
        <size>20</size>
        <shadow>2,2</shadow>
    </font>

    <container name="program_info" fademovement="-30,0">

        <image name="background">
            <filename>osd/background.png</filename>
            <position>0,480</position>
        </image>

        <textarea name="title">
            <area>185,510,830,38</area>
            <font>extralarge</font>
        </textarea>

        <textarea name="description">
            <multiline>yes</multiline>
            <area>185,585,1054,130</area>
            <font>medium</font>
            <value>%SUBTITLE|"|" %%DESCRIPTION%</value>
        </textarea>

        <textarea name="starttime">
            <area>185,551,880,25</area>
            <font>smallgrey</font>
            <value>(%STARTTIME% - %ENDTIME%)  %LENMINS%</value>
        </textarea> 

        <image name="channelicon">
            <position>46,520</position>
            <staticsize>120,90</staticsize>
        </image>

        <textarea name="time" align="right">
            <area>1034,510,200,40</area>
            <font>medium</font>
        </textarea>

        <textarea name="channum" align="center">
            <area>46,635,120,30</area>
            <font>extralarge</font>
            <value>%CHANNUM%</value>
        </textarea>

    </container>

    <container name="channel_number" fademovement="-25,0">

        <image name="background">
            <filename>osd/chan_background.png</filename>
            <position>0,0</position>
        </image>

        <textarea name="channum" align="right">
            <area>25,33,80,30</area>
            <font>medium</font>
            <value>%CHANNUM%</value>
        </textarea>

        <textarea name="callsign" align="center">
            <multiline>no</multiline>
            <area>110,33,240,30</area>
            <font>medium</font>
            <value>%CALLSIGN%</value>
        </textarea>

    </container>

    <container name="browse_info" fademovement="0,6">
        <image name="background">
            <filename>osd/background.png</filename>
            <position>0,480</position>
        </image>


        <textarea name="title">
            <area>185,510,830,38</area>
            <font>extralarge</font>
        </textarea>

        <textarea name="description">
            <multiline>yes</multiline>
            <area>185,585,1054,130</area>
            <font>medium</font>
            <value>%SUBTITLE|"|" %%DESCRIPTION%</value>
        </textarea>

        <textarea name="starttime">
            <area>185,551,880,25</area>
            <font>smallgrey</font>
            <value>(%STARTTIME% - %ENDTIME%)  %LENMINS%</value>
        </textarea> 

        <image name="channelicon">
            <position>46,520</position>
            <staticsize>120,90</staticsize>
        </image>

        <textarea name="time" align="right">
            <area>1034,510,200,40</area>
            <font>medium</font>
        </textarea>

        <textarea name="channum" align="center">
            <area>46,635,120,30</area>
            <font>extralarge</font>
            <value>%CHANNUM%</value>
        </textarea>

    </container>

    <!-- Status: Volume, Paused, Position etc -->
    <container name="status" priority="10" fademovement="25,0">

        <image name="background">
            <filename>osd/edit.png</filename>
            <position>0,535</position>
        </image>

        <image name="sliderframe">
            <filename>paused_frame.png</filename>
            <position>135,394</position>
        </image>

        <textarea name="status">
            <area>60,554,600,40</area>
            <font>extralarge</font>
        </textarea>

        <image name="sliderbackground">
            <position>50,599</position>
            <filename>osd/slider_background.png</filename>
        </image>

        <slider name="statusslider" type="fill">
            <area>50,599,1180,28</area>
            <filename>osd/slider_oncolour.png</filename>
            <altfilename>osd/slider_offcolour.png</altfilename>
        </slider>

        <image name="sliderglass">
            <filename>osd/slider_glass.png</filename>
            <position>41,594</position>
        </image>

        <textarea name="slidertext">
            <area>60,637,1000,60</area>
            <font>small</font>
            <multiline>no</multiline>
        </textarea>

        <textarea name="extendedslidertext">
            <area>60,637,1000,60</area>
            <font>small</font>
            <multiline>no</multiline>
        </textarea>

        <textarea name="time" align="right">
            <area>900,557,310,40</area>
            <font>small</font>
        </textarea>

    </container>

    <container name="notify_cid_info" priority="10" fademovement="0,6">

        <image name="background">
            <filename>osd/edit.png</filename>
            <position>0,480</position>
        </image>

        <image name="watermark">
            <filename>osd/phone.png</filename>
            <position>50,500</position>
        </image>

        <textarea name="notify_cid_name">
            <area>175,505,800,30</area>
            <font>medium</font>
            <multiline>no</multiline>
        </textarea>

        <textarea name="notify_cid_num">
            <area>175,540,800,30</area>
            <font>medium</font>
            <multiline>no</multiline>
        </textarea>

        <textarea name="notify_cid_dt">
            <area>175,575,800,30</area>
            <font>medium</font>
            <multiline>no</multiline>
        </textarea>

    </container>

    <container name="notify_alert_text" priority="10" fademovement="0,6">

        <image name="background">
            <filename>osd/alert.png</filename>
            <position>0,600</position>
        </image>

        <textarea name="notify_text" align="center">
            <area>40,627,1200,40</area>
            <font>extralarge</font>
        </textarea>

    </container>

    <container name="news_scroller" priority="20">

        <image name="background">
            <filename>osd/alert.png</filename>
            <position>0,600</position>
        </image>

        <textarea name="text_scroll">
            <area>0,627,1280,40</area>
            <font>extralarge</font>
            <scroller>yes</scroller>
            <scrollmovement>-3,0</scrollmovement> <!-- only x movement for now -->
        </textarea>

    </container>

    <container name="editmode" fademovement="25,0">

        <image name="background">
            <filename>osd/edit.png</filename>
            <position>0,535</position>
        </image>

        <textarea name="edit">
            <area>60,554,100,40</area>
            <font>extralarge</font>
            <value>Edit</value>
        </textarea>

        <slider name="editslider" type="edit">
            <area>50,599,1180,28</area>
            <filename>osd/slider_oncolour.png</filename>
            <altfilename>osd/slider_offcolour.png</altfilename>
        </slider>

        <image name="sliderglass">
            <filename>osd/slider_glass.png</filename>
            <position>41,594</position>
        </image>

        <slider name="editposition" type="position">
            <area>50,599,1180,28</area>
            <filename>osd/position_marker.png</filename>
        </slider>

        <editarrow name="left">
            <filename>osd/cut_right.png</filename>
            <area>50,599,1180,28</area>
        </editarrow>

        <editarrow name="right">
            <filename>osd/cut_left.png</filename>
            <area>51,599,1180,28</area>
        </editarrow>

        <textarea name="timedisplay">
            <area>60,637,300,60</area>
            <font>small</font>
        </textarea>

        <textarea name="cutindicator" align="center">
            <area>565,638,150,30</area>
            <font>small</font>
        </textarea>

        <textarea name="seekamount" align="right">
            <area>900,554,300,40</area>
            <font>medium</font>
        </textarea>

    </container>

    <container name="settings" fademovement="25,0">

        <image name="background">
            <filename>osd/settings_background.png</filename>
            <position>903,0</position>
        </image>

        <textarea name="settings" align="center">
            <area>912,33,320,32</area>
            <font>medium</font>
        </textarea>

    </container>

    <container name="basedialog" priority="0" fademovement="0,0"> <!-- must be named this -->

        <image name="background">
            <filename>osd/popup_background.png</filename>
            <position>240,94</position>
        </image>

        <positionimage name="selector">
            <filename>osd/large_selectbar.png</filename>
            <position>270,277</position>
            <position>270,322</position>
            <position>270,367</position>
            <position>270,412</position>
        </positionimage>

        <textarea name="message">
            <area>270,130,750,220</area>
            <font>medium</font>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="option1">
            <area>303,279,700,35</area>
            <font>medium</font>
        </textarea>

        <textarea name="option2">
            <area>303,324,700,35</area>
            <font>medium</font>
        </textarea>

        <textarea name="option3">
            <area>303,369,700,35</area>
            <font>medium</font>
        </textarea>

        <textarea name="option4">
            <area>303,414,700,35</area>
            <font>medium</font>
        </textarea>

    </container>

    <container name="menu">

        <listtreemenu name="menu">
            <area>40,40,1200,600</area>
            <listsize>0,0,550,550</listsize>
            <leveloffset>10</leveloffset>
            <margin>10</margin>
            <spacing>10</spacing>
            <gradient type="unselected" start="#222222" end="#333333" alpha="200">
            </gradient>
            <gradient type="selected" start="#222222" end="#666666" alpha="255">
            </gradient>
            <fcnfont name="medium" function="active"></fcnfont>
            <fcnfont name="medium" function="inactive"></fcnfont>
        </listtreemenu>

    </container>

    <container name="channel_editor">

        <image name="background">
            <filename>osd/popup_background.png</filename>
            <position>240,94</position>
        </image>

        <textarea name="dialog_label" align="center">
            <area>254,125,750,40</area>
            <font>medium</font>
            <value>Channel Editor</value>
        </textarea>

        <textarea name="callsign_label" align="right">
            <area>305,201,215,40</area>
            <font>medium</font>
            <value>Callsign</value>
        </textarea>

        <textarea name="callsign" entry="0">
            <area>540,201,400,40</area>
            <font>small</font>
            <altfont>medium</altfont>
            <value></value>
        </textarea>

        <textarea name="channum_label" align="right">
            <area>305,260,215,40</area>
            <font>medium</font>
            <value>Channel #</value>
        </textarea>

        <textarea name="channum" entry="1">
            <area>540,260,400,40</area>
            <font>small</font>
            <altfont>medium</altfont>
            <value></value>
        </textarea>

        <textarea name="channame_label" align="right">
            <area>305,316,215,40</area>
            <font>medium</font>
            <value>Channel Name</value>
        </textarea>

        <textarea name="channame" entry="2">
            <area>540,316,400,40</area>
            <font>small</font>
            <altfont>medium</altfont>
            <value></value>
        </textarea>

        <textarea name="XMLTV_label" align="right">
            <area>305,375,215,40</area>
            <font>medium</font>
            <value>XMLTV ID</value>
        </textarea>

        <textarea name="XMLTV" entry="3">
            <area>540,375,400,40</area>
            <font>small</font>
            <altfont>medium</altfont>
            <value></value>
        </textarea>

        <textarea name="probe_all" entry="4" button="yes" align="center">
            <area>420,432,185,40</area>
            <font>small</font>
            <altfont>medium</altfont>
            <value>Probe</value>
        </textarea>

        <textarea name="ok" entry="5" button="yes" align="center">
            <area>635,432,185,40</area>
            <font>small</font>
            <altfont>medium</altfont>
            <value>Ok</value>
        </textarea>

    </container>

</mythosdtheme>
